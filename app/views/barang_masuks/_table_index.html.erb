<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th width="15%">Tgl. Masuk</th>
      <th width="15%">No. Transaksi</th>
      <th width="8%">Kode</th>
      <th>Nama Barang</th>
      <th width="10%">Jumlah</th>
      <!-- <th colspan="2" width="2%">Action</th> -->
    </tr>
  </thead>
  <tbody>
    <% @barang_masuks.each do |barang_masuk| %>
      <tr>
        <td align="center"><%= link_to barang_masuk.created_at.strftime("%d-%m-%Y %H:%M"), barang_masuk %></td>
        <td align="center"><%= link_to barang_masuk.no_transaksi, barang_masuk %></td>
        <td align="center"><%= link_to barang_masuk.barang.code, barang_masuk %></td>
        <td><%= link_to barang_masuk.barang.name, barang_masuk %></td>
        <td align="right"><%= link_to barang_masuk.jumlah.to_s + " " + barang_masuk.barang.unit.name, barang_masuk %></td>
        <!-- <td><%#= link_to edit_barang_masuk_path(barang_masuk), class: "btn btn-default btn-xs" do %><i class="fa fa-pencil-square-o"></i> Edit<%# end %></td>
        <td><%#= link_to barang_masuk, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %><i class="fa fa-trash-o"></i> Delete<%# end %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
<div align="right"><%= paginate @barang_masuks, remote: true %></div>