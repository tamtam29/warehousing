<%= form_for @barang_masuk, :html => {:class => "form-horizontal form-label-left"} do |f| %>
  <div class="x_content">
    <br />
    <div class="form-group">
      <%= f.label :no_transaksi, "No. Transaksi", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :no_transaksi, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Barang", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= select_tag "barang_masuk[barang_id]", options_from_collection_for_select(Barang.all, :id, :name), class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :jumlah, "Jumlah", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :jumlah, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tgl_masuk, "Tanggal Masuk", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.date_field :tgl_masuk, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :note, "Catatan", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :note, rows: 5, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="ln_solid"></div>
  </div>
  <div class="x_content">
    <div class="form-group">
      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to "Cancel", barang_masuks_path, class: "btn btn-primary btn-sm" %>
        <%= submit_tag params[:action] == 'new' ? "Create" : "Update", class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </div>
<% end %>