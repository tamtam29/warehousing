<table class="table table-striped table-hover table-bordered barang">
  <thead>
    <tr>
      <th width="15%">Tgl. Keluar</th>
      <th width="15%">No. Transaksi</th>
      <th>Total Harga</th>
      <th>Discount</th>
      <th>Grand Total</th>
      <th>Pre Order</th>
      <th width="2%">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @barang_keluars.each do |barang_keluar| %>
      <tr>
        <td align="center"><%= link_to barang_keluar.tgl_keluar.strftime("%d-%m-%Y %H:%M"), pre_order_path(barang_keluar) %></td>
        <td align="center"><%= link_to barang_keluar.no_transaksi, pre_order_path(barang_keluar) %></td>
        <td align="right"><%= link_to "Rp. "+add_delimiter(barang_keluar.detail_barang_keluars.sum("total_harga_awal")), pre_order_path(barang_keluar) %></td>
        <td align="right"><%= link_to "Rp. "+add_delimiter(barang_keluar.detail_barang_keluars.sum("total_harga_awal") - barang_keluar.grand_total), pre_order_path(barang_keluar) %></td>
        <td align="right"><%= link_to "Rp. "+add_delimiter(barang_keluar.grand_total), pre_order_path(barang_keluar) %></td>
        <td align="right" class="preorder"><%= link_to "Rp. "+add_delimiter(barang_keluar.pre_order), pre_order_path(barang_keluar) %></td>
        <td><%= link_to form_bayar_po_path(barang_keluar), class: "btn btn-info btn-xs" do %><i class="fa fa-shopping-cart"></i> Bayar<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div align="right"><%= paginate @barang_keluars, remote: true %></div>