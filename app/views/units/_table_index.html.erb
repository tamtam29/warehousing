<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Satuan</th>
      <th colspan="2" width="2%">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= link_to unit.name, unit %></td>
        <td><%= link_to edit_unit_path(unit), class: "btn btn-default btn-xs" do %><i class="fa fa-pencil-square-o"></i> Edit<% end %></td>
        <td><%= link_to unit, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %><i class="fa fa-trash-o"></i> Delete<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div align="right"><%= paginate @units, remote: true %></div>