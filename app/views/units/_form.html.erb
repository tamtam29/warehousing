<%= form_for @unit, :html => {:class => "form-horizontal form-label-left"} do |f| %>
  <div class="x_content">
    <br />
    <div class="form-group">
      <%= f.label :name, "Satuan", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="ln_solid"></div>
  </div>
  <div class="x_content">
    <div class="form-group">
      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to "Cancel", units_path, class: "btn btn-primary btn-sm" %>
        <%= submit_tag params[:action] == 'new' ? "Create" : "Update", class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </div>
<% end %>