<%= render "autocomplete_js" %>
<%= form_for @promo, :html => {:class => "form-horizontal form-label-left"} do |f| %>
<% if @promo.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@promo.errors.count, "error") %> prohibited this barang masuk from being saved:</h2>

  <ul>
    <% @promo.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
  <div class="x_content">
    <br />
    <div class="form-group">
      <%= f.label :name, "Promo", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, "Deskripsi Promo", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :description, rows: 5, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Barang", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= hidden_field_tag "promo[barang_id]", @promo.barang_id %>
        <%= text_field_tag "promo[barang_name]", @promo.barang ? @promo.barang.name : nil, id: "promo_barang_name", class: "form-control input-sm col-md-7 col-xs-12", placeholder: "Pilih Barang", autocomplete: "off", :data => {:required => 'true', type: 'alphabet'} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :disc, "Discount", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="input-group">
          <span class="input-group-addon">%</span>
          <%= f.text_field :disc, class: "form-control input-sm col-md-7 col-xs-12" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :threshold_qty, "Per Barang", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :threshold_qty, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="ln_solid"></div>
  </div>
  <div class="x_content">
    <div class="form-group">
      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to "Cancel", promos_path, class: "btn btn-primary btn-sm" %>
        <%= submit_tag params[:action] == 'new' ? "Create" : "Update", class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </div>
<% end %>

<script>
  $(function() {
    $( "#promo_tgl_masuk" ).datepicker();
  });
</script>
