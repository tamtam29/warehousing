<div id="page-wrapper">
  <h1><i class="fa fa-user"></i> Hak Akses</h1>
  <ol class="breadcrumb">
    <li class="nonactive"><i class="fa fa-building fa-fw"></i> Master</li>
    <li><%= link_to users_path do %>Daftar User<% end %></li>
  </ol>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Daftar User</h2>
          <div class="clearfix"></div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-7">
              <%= link_to new_user_path, class: "btn btn-primary btn-sm" do %><i class="fa fa-plus-square"></i> Tambah User<% end %>
            </div>
          </div>
        </div>

        <div class="x_content">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th colspan="2" width="2%">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= link_to user.username, user %></td>
                  <td><%= link_to user.first_name, user %></td>
                  <td><%= link_to user.last_name, user %></td>
                  <td><%= link_to user.email, user %></td>
                  <td><%= link_to user.role, user %></td>
                  <td><%= link_to edit_user_path(user), class: "btn btn-default btn-xs" do %><i class="fa fa-pencil-square-o"></i> Edit<% end %></td>
                  <td><%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %><i class="fa fa-trash-o"></i> Delete<% end %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>
