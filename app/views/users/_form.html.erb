<%= form_for @user, :html => {:class => "form-horizontal form-label-left"} do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
  <div class="x_content">
    <br />
    <div class="form-group">
      <%= f.label :first_name, "First Name", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :first_name, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, "Last Name", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :last_name, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :email, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :username, "Username", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :username, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.password_field :password, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Password Confirmation", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.password_field :password_confirmation, class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :role, "Role", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= select_tag "user[role]", options_for_select(User.role_list, selected: @user.role), class: "form-control input-sm col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="ln_solid"></div>
  </div>
  <div class="x_content">
    <div class="form-group">
      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to "Cancel", users_path, class: "btn btn-primary btn-sm" %>
        <%= submit_tag params[:action] == 'new' ? "Create" : "Update", class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </div>
<% end %>