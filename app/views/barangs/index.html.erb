<section class="content-header">
  <h1><i class="fa fa-building fa-fw"></i> Barang</h1>
  <ol class="breadcrumb">
    <li class="nonactive"><i class="fa fa-building fa-fw"></i> Master</li>
    <li><%= link_to barangs_path do %>Daftar Barang<% end %></li>
  </ol>
</section>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Daftar Barang</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="form-group">
          <div class="row">
            <div class="col-md-7">
              <%= link_to new_barang_path, class: "btn btn-primary btn-sm" do %><i class="fa fa-plus-square"></i> Tambah Barang<% end %>
            </div>
            <div class="col-md-5">
              <%= form_tag barangs_path, method: "GET", remote: true do %>
              <div class="input-group input-group-sm">
                <span class="input-group-addon radius"><span class="glyphicon glyphicon-search"></span></span>
                <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Cari berdasarkan kategori, kode atau barang " %>
                <span class="input-group-btn">
                  <%= submit_tag "Cari", class: "btn btn-default radius" %>
                </span>
              </div>
              <% end %>
            </div>
          </div>
        </div>
        <div id="table_index">
          <%= render 'table_index' %>
        </div>
      </div>
    </div>
  </div>
</div>