<section class="content-header">
  <h1><i class="fa fa-building fa-fw"></i> Barang</h1>
  <ol class="breadcrumb">
    <li class="nonactive"><i class="fa fa-building fa-fw"></i> Master</li>
    <li><%= link_to barangs_path do %>Daftar Barang<% end %></li>
  </ol>
</section>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Daftar Barang</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="form-group">
          <div class="row">
            <div class="col-md-7">
              <%= link_to new_barang_path, class: "btn btn-primary btn-sm" do %><i class="fa fa-plus-square"></i> Tambah Barang<% end %>
            </div>
          </div>
        </div>
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th>Kategori Barang</th>
              <th>Kode Barang</th>
              <th>Nama Barang</th>
              <th>Satuan</th>
              <th>Harga (Rp.)</th>
              <th colspan="2" width="2%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @barangs.each do |barang| %>
              <tr>
                <td><%= link_to barang.category.name, barang %></td>
                <td align="center"><%= link_to barang.code, barang %></td>
                <td><%= link_to barang.name, barang %></td>
                <td><%= link_to barang.unit.name, barang %></td>
                <td align="right"><%= link_to add_delimiter(barang.harga), barang %></td>
                <td><%= link_to edit_barang_path(barang), class: "btn btn-default btn-xs" do %><i class="fa fa-pencil-square-o"></i> Edit<% end %></td>
                <td><%= link_to barang, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %><i class="fa fa-trash-o"></i> Delete<% end %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div align="right"><%= paginate @barangs %></div>
    </div>
  </div>
</div>
