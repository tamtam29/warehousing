<section class="content-header">
  <h1><i class="fa fa-line-chart fa-fw"></i> Stok Barang</h1>
  <ol class="breadcrumb">
    <li class="nonactive"><i class="fa fa-line-chart fa-fw"></i> Stok Barang</li>
    <li><%= link_to stocks_path do %>Daftar Stok Barang<% end %></li>
  </ol>
</section>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Daftar Stok Barang</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th width="15%">Kode Barang</th>
              <th>Nama Barang</th>
              <th width="15%">Stok</th>
              <th width="15%">Harga (Rp.)</th>
              <th width="15%">Disc. (%)</th>
            </tr>
          </thead>
          <tbody>
            <% @stocks.each do |stock| %>
              <tr>
                <td align="center"><%= stock.barang.code %></td>
                <td><%= stock.barang.name %></td>
                <td align="right"><%= stock.jumlah.to_s + " " + stock.barang.unit.name %></td>
                <td align="right"><%= add_delimiter(stock.barang.harga) %></td>
                <% if stock.barang.promo %>
                  <td align="right"><%= stock.barang.promo.disc.to_s + " / " + stock.barang.promo.threshold_qty.to_s + " Barang"%></td>
                <% else %>
                  <td align="right">-</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div align="right"><%= paginate @stocks %></div>
    </div>
  </div>
</div>
