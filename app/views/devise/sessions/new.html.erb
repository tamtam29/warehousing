<nav class="button-login">
  <ul id="ul_login">
    <li id="login">
      <a id="login-trigger" href="#">
        Log in <span>â–¼</span>
      </a>
      <div id="login-content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <fieldset id="inputs">
            <%= f.text_field :username, :autofocus => true, :class => "form-control input-sm", placeholder: "Enter your username" %>
            <%= f.password_field :password, :class => "form-control input-sm", placeholder: "Enter your password" %>
          </fieldset>
          <fieldset id="actions">
            <%= f.submit "Log in", class: "pull-right", id: "submit" %>
          </fieldset>
        <% end %>
      </div>
    </li>
    <li id="signup">
      <a href="">Rumah ASI Bojonegoro</a>
    </li>
  </ul>
</nav>

<% if alert != "You need to sign in or sign up before continuing." %>
<div class="alert-login">
  <p <% if alert %> class="alert alert-danger" <% end %> ><%= alert %></p>
</div>
<% end %>

<div class="login-form">
  <div class="header">
    <h1><%= image_tag("rumah_asi_bjn.jpg", height: '80', width: '80', class: "image_login") %> Rumah ASI Bojonegoro</h1>
  </div>
  <div class="footer">
    <div id="map" style="height:250px"></div>
    <script async defer src="https://maps.googleapis.com/maps/api/js?signed_in=true&libraries=places&callback=initMap"></script>
  </div>
  <div class="header">
    <center><span><br>Jalan Agus Salim, Toko No. 6<br>Samping Masjid Agung Darussalam, Alun alun Bojonegoro<br>Bojonegoro, Indonesia 62113</span></center>
  </div>
</div>
<div id="wrapper_login">
  <div class="login-form">
    <center><hr></center>
    <div class="header">
      <center><span>We Are Social</span></center>
      <center>
        <a href="https://web.facebook.com/profile.php?id=1350080881">
          <%= image_tag("facebook.png", height: '40', width: '40') %>
        </a>
      </center>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $('#login-trigger').click(function(){
    $(this).next('#login-content').slideToggle();
    $(this).toggleClass('active');

    if ($(this).hasClass('active')) $(this).find('span').html('&#x25B2;')
    else $(this).find('span').html('&#x25BC;')
  })
});

function initMap() {
  var map = new google.maps.Map(document.getElementById('map'), {
    zoom: 15,
    center: {lat: -7.149774, lng: 111.879077}
  });

  var marker = new google.maps.Marker({
    map: map,
    // Define the place with a location, and a query string.
    place: {
      location: {lat: -7.149774, lng: 111.879077},
      query: 'Jalan Agus Salim, Kecamatan Bojonegoro, Bojonegoro'

    },
    // Attributions help users find your site again.
    attribution: {
      source: 'Google Maps JavaScript API',
      webUrl: 'https://developers.google.com/maps/'
    }
  });

  // Construct a new InfoWindow.
  var infoWindow = new google.maps.InfoWindow({
    content: 'Rumah ASI Bojonegoro'
  });

  // Opens the InfoWindow when marker is clicked.
  marker.addListener('click', function() {
    infoWindow.open(map, marker);
  });
}
</script>