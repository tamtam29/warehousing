<section class="content-header">
  <h1><i class="fa fa-file-archive-o fa-fw"></i> Report</h1>
  <ol class="breadcrumb">
    <li class="nonactive"><i class="fa fa-file-archive-o fa-fw"></i> Report</li>
    <li><%= link_to reports_path do %>Report Barang Keluar<% end %></li>
  </ol>
</section>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Report Barang Keluar</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <%= form_tag reports_path, method: "GET" do %>
          <div class="form-group row">
            <div class="col-md-2">
              <%= label_tag :start_date, "Start Date", class: "control-label" %>
              <%= text_field_tag :start_date, params[:start_date], class: "form-control input-sm" %>
            </div>
            <div class="col-md-2">
              <%= label_tag :end_date, "End Date", class: "control-label" %>
              <%= text_field_tag :end_date, params[:end_date], class: "form-control input-sm" %>
            </div>
            <div class="col-md-4">
              <%= label_tag :keyword, "No. Transaksi", class: "control-label" %>
              <%= text_field_tag :no_transaksi, params[:no_transaksi], id:"search_name", class: "form-control input-sm", placeholder: "Input no. transaksi" %>
            </div>
            <div class="col-md-2">
              <div class="input-group input-group-sm">
                <%= submit_tag "Search", class: "btn btn-success btn-sm", style: "margin-top:25px;" %>
              </div>
            </div>
          </div>
        <% end %>
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th rowspan="2" style="vertical-align: middle;">Tgl. Keluar</th>
              <th rowspan="2" style="vertical-align: middle;">No. Transaksi</th>
              <th colspan="5">Rp.</th>
            </tr>
            <tr>
              <th>Total Harga</th>
              <th>Potongan</th>
              <th>Grand Total</th>
              <th>Bayar</th>
              <th>Kembalian</th>
            </tr>
          </thead>
          <tbody>
            <% @barang_keluars.each do |barang_keluar| %>
              <tr>
                <td align="center"><%= link_to barang_keluar.tgl_keluar, report_path(barang_keluar) %></td>
                <td align="center"><%= link_to barang_keluar.no_transaksi, report_path(barang_keluar) %></td>
                <td align="right"><%= link_to "-", report_path(barang_keluar) %></td>
                <td align="right"><%= link_to "-", report_path(barang_keluar) %></td>
                <td align="right"><%= link_to add_delimiter(barang_keluar.grand_total), report_path(barang_keluar) %></td>
                <td align="right"><%= link_to add_delimiter(barang_keluar.bayar), report_path(barang_keluar) %></td>
                <td align="right"><%= link_to add_delimiter(barang_keluar.kembalian), report_path(barang_keluar) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div align="right"><%= paginate @barang_keluars %></div>
    </div>
  </div>
</div>


<script>
  $(document).ready(function(){
    $( "#start_date" ).datepicker();
    $( "#end_date" ).datepicker();
  });
</script>