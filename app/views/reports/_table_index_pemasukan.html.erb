<% if @barang_keluars.present? %>
  <div class='form-group' style="float: left;">
    <%= link_to pemasukan_rumah_asi_bjn_path(format: "xls", start_date: params[:start_date], end_date: params[:end_date]), class: "btn btn-success btn-sm pull-right" do %><i class="fa fa-download"></i> Excel<% end %>
  </div>
  <table class="table table-striped table-hover table-bordered barang">
    <thead>
      <tr>
        <th width="20%">Tgl. Keluar</th>
        <th>Pemasukan</th>
      </tr>
    </thead>
    <tbody>
      <% @barang_keluars.each do |barang_keluar| %>
        <tr>
          <td align="center"><%= barang_keluar.tanggal.strftime("%d-%m-%Y") %></td>
          <td align="right"><%= "Rp. "+add_delimiter(barang_keluar.grand_total) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="2" style="text-align:right;"><%= "Rp. "+add_delimiter(@grand_total.first.nominal).to_s %></th>
      </tr>
    </tfoot>
  </table>
  <div align="right"><%= paginate @barang_keluars %></div>
<% end %>