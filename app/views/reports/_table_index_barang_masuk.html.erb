<table class="table table-striped table-hover table-bordered barang">
  <thead>
    <tr>
      <th width="15%">Tgl. Masuk</th>
      <th width="15%">No. Transaksi</th>
      <th width="8%">Kode</th>
      <th>Nama Barang</th>
      <th width="10%">Jumlah</th>
    </tr>
  </thead>
  <tbody>
    <% @barang_masuks.each do |barang_masuk| %>
      <tr>
        <td align="center"><%= link_to barang_masuk.created_at.strftime("%d-%m-%Y %H:%M"), show_report_barang_masuk_path(barang_masuk) %></td>
        <td align="center"><%= link_to barang_masuk.no_transaksi, show_report_barang_masuk_path(barang_masuk) %></td>
        <td align="center"><%= link_to barang_masuk.barang.code, show_report_barang_masuk_path(barang_masuk) %></td>
        <td><%= link_to barang_masuk.barang.name, show_report_barang_masuk_path(barang_masuk) %></td>
        <td align="right"><%= link_to barang_masuk.jumlah.to_s + " " + barang_masuk.barang.unit.name, show_report_barang_masuk_path(barang_masuk) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div align="right"><%= paginate @barang_masuks, remote: true %></div>

<script>
  $(document).ready(function(){
    var tableBarangSize = $('.barang tbody tr').length;
    if (tableBarangSize == 0){
      $('.barang').hide();
    } else {
      $('.barang').show();
    }
  });
</script>