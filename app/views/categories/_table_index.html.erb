<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Kode</th>
      <th>Kategori Barang</th>
      <th colspan="2" width="2%">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.code, category %></td>
        <td><%= link_to category.name, category %></td>
        <td><%= link_to edit_category_path(category), class: "btn btn-default btn-xs" do %><i class="fa fa-pencil-square-o"></i> Edit<% end %></td>
        <td><%= link_to category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %><i class="fa fa-trash-o"></i> Delete<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div align="right"><%= paginate @categories, remote: true %></div>